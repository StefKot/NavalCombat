<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activities.GameActivity">

    <!-- Статус игры -->
    <TextView
        android:id="@+id/textViewGameStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Ваш ход"/>

    <!-- Заголовок поля противника -->
    <TextView
        android:id="@+id/labelOpponentGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поле противника:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewGameStatus"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Сетка противника (GridLayout) -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/opponentGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:alignmentMode="alignMargins"
        app:columnCount="10"
        app:rowCount="10"
        app:layout_constraintTop_toBottomOf="@id/labelOpponentGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_middle"
        app:layout_constraintDimensionRatio="1:1">
        <!-- Ячейки будут добавлены сюда программно из GameActivity.kt -->
        <!-- НЕ добавляйте 100 View сюда вручную в XML, это неудобно -->
    </androidx.gridlayout.widget.GridLayout>

    <!-- Горизонтальная направляющая для разделения полей -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" /> <!-- Располагаем чуть ниже середины -->


    <!-- Заголовок поля игрока -->
    <TextView
        android:id="@+id/labelPlayerGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваше поле:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_middle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Сетка игрока (GridLayout) -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/playerGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:alignmentMode="alignMargins"
        app:columnCount="10"
        app:rowCount="10"
        app:layout_constraintTop_toBottomOf="@id/labelPlayerGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1">
        <!-- Ячейки будут добавлены сюда программно из GameActivity.kt -->
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>